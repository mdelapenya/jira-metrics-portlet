<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>jirametricsportlet</portlet-name>
		<display-name>JIRA Metrics Portlet</display-name>
		<portlet-class>com.liferay.jira.metrics.portlet.JiraMetricsPortlet</portlet-class>
		<init-param>
			<name>config-template</name>
			<value>/html/jirametrics/config.jsp</value>
		</init-param>
		<init-param>
			<name>view-template</name>
			<value>/html/jirametrics/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>config</portlet-mode>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>JIRA Metrics Portlet</title>
			<short-title>JiraMetricsPortlet</short-title>
			<keywords/>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>teamName</name>
				<value>UI</value>
			</preference>
			<preference>
				<name>jiraPriorities</name>
				<value>3</value>
				<value>4</value>
				<value>5</value>
			</preference>
			<preference>
				<name>jiraProject</name>
				<value>LPS</value>
			</preference>
			<preference>
				<name>jiraStatuses</name>
				<value>In Progress</value>
				<value>Reopened</value>
				<value>In Review</value>
				<value>Verified</value>
			</preference>
			<preference>
				<name>jiraComponents</name>
				<value>UI Infraestructure</value>
				<value>UI</value>
			</preference>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>